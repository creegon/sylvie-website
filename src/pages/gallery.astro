<script define:vars={{ allImages }}>
  document.addEventListener('DOMContentLoaded', () => {
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img');
    const lightboxTitle = document.getElementById('lightbox-title');
    const lightboxDesc = document.getElementById('lightbox-desc');
    const lightboxCounter = document.getElementById('lightbox-counter');
    const lightboxClose = document.getElementById('lightbox-close');
    const lightboxPrev = document.getElementById('lightbox-prev');
    const lightboxNext = document.getElementById('lightbox-next');
    
    let currentIndex = 0;
    let visibleIndices = []; // å½“å‰ç­›é€‰ä¸‹å¯è§çš„å›¾ç‰‡ç´¢å¼•
    
    // æ›´æ–°å¯è§ç´¢å¼•åˆ—è¡¨
    function updateVisibleIndices() {
      visibleIndices = [];
      document.querySelectorAll('.gallery-item').forEach(item => {
        if (item.offsetParent !== null) { // å¯è§çš„å…ƒç´ 
          visibleIndices.push(parseInt(item.dataset.index));
        }
      });
    }
    
    // æ˜¾ç¤ºæŒ‡å®šç´¢å¼•çš„å›¾ç‰‡
    function showImage(index) {
      const img = allImages[index];
      if (!img) return;
      
      // åˆ‡æ¢åŠ¨ç”»
      lightboxImg.classList.add('switching');
      setTimeout(() => {
        lightboxImg.src = img.src;
        lightboxTitle.textContent = img.title;
        lightboxDesc.textContent = img.description || '';
        lightboxDesc.style.display = img.description ? 'block' : 'none';
        
        const posInVisible = visibleIndices.indexOf(index);
        lightboxCounter.textContent = `${posInVisible + 1} / ${visibleIndices.length}`;
        
        currentIndex = index;
        lightboxImg.classList.remove('switching');
      }, 150);
    }
    
    // å¯¼èˆªåˆ°ä¸Šä¸€å¼ /ä¸‹ä¸€å¼ 
    function navigate(direction) {
      const posInVisible = visibleIndices.indexOf(currentIndex);
      let newPos = posInVisible + direction;
      if (newPos < 0) newPos = visibleIndices.length - 1;
      if (newPos >= visibleIndices.length) newPos = 0;
      showImage(visibleIndices[newPos]);
    }
    
    // ç‚¹å‡»å›¾ç‰‡æ‰“å¼€ lightbox
    document.querySelectorAll('.gallery-item').forEach(item => {
      item.addEventListener('click', () => {
        updateVisibleIndices();
        const index = parseInt(item.dataset.index);
        currentIndex = index;
        showImage(index);
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });
    
    // å…³é—­ lightbox
    const closeLightbox = () => {
      lightbox.classList.remove('active');
      document.body.style.overflow = '';
    };
    
    lightbox.addEventListener('click', (e) => {
      if (e.target === lightbox) closeLightbox();
    });
    lightboxClose.addEventListener('click', closeLightbox);
    
    // å¯¼èˆªæŒ‰é’®
    lightboxPrev.addEventListener('click', (e) => { e.stopPropagation(); navigate(-1); });
    lightboxNext.addEventListener('click', (e) => { e.stopPropagation(); navigate(1); });
    
    // é˜»æ­¢å›¾ç‰‡ç‚¹å‡»å…³é—­
    lightboxImg.addEventListener('click', (e) => e.stopPropagation());
    
    // é”®ç›˜å¯¼èˆª
    document.addEventListener('keydown', (e) => {
      if (!lightbox.classList.contains('active')) return;
      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowLeft') navigate(-1);
      if (e.key === 'ArrowRight') navigate(1);
    });
    
    // è§¦æ‘¸æ»‘åŠ¨æ”¯æŒ
    let touchStartX = 0;
    lightbox.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });
    
    lightbox.addEventListener('touchend', (e) => {
      const diff = e.changedTouches[0].screenX - touchStartX;
      if (Math.abs(diff) > 50) {
        navigate(diff > 0 ? -1 : 1);
      }
    }, { passive: true });
    
    // ===== åˆ†ç±»ç­›é€‰åŠŸèƒ½ =====
    const filterButtons = document.querySelectorAll('.gallery-filter');
    const sections = document.querySelectorAll('.gallery-section');
    
    filterButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.dataset.category;
        
        // æ›´æ–°æŒ‰é’®çŠ¶æ€
        filterButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // æ˜¾ç¤º/éšè—section
        if (category === 'å…¨éƒ¨') {
          sections.forEach(s => s.classList.remove('hidden-section'));
        } else {
          sections.forEach(s => {
            if (s.dataset.section === category) {
              s.classList.remove('hidden-section');
            } else {
              s.classList.add('hidden-section');
            }
          });
        }
      });
    });
  });
</script>
